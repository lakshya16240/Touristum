    app:startDestination="@+id/navigation_upcomingTrips">

    <fragment
        android:id="@+id/navigation_upcomingTrips"
        android:name="com.teamcool.touristum.ui.Driver.UpcomingTripsFragment"
        android:label="Upcoming Trips"
        tools:layout="@layout/fragment_upcoming_trips" />

    <fragment
