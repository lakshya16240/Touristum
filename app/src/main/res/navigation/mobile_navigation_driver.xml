        android:name="com.teamcool.touristum.ui.Driver.PastTripsFragment"
        android:label="Past Trips"
        tools:layout="@layout/fragment_past_trips" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.teamcool.touristum.ui.profile.ProfileFragment"
