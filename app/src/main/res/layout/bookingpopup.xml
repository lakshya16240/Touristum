<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_booking_id"
        android:text="BookingID"
        android:layout_marginTop="30sp"
        android:textSize="20sp"
        android:layout_marginLeft="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_client_id"
        android:text="ClientID"
        android:layout_marginTop="5sp"
        android:textSize="15sp"
        android:layout_marginLeft="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_package_id"
        android:text="PackageID"
        android:layout_marginTop="5sp"
        android:textSize="15sp"
        android:layout_marginLeft="20sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_2"
        android:orientation="horizontal"
        android:layout_marginLeft="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_packagetype"
            android:textSize="15sp"
            android:text="PackageType  :  " />
        <EditText
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/home_type"
            android:layout_marginLeft="20sp"
            android:textSize="15sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_city_id"
        android:text="CityID"
        android:layout_marginTop="5sp"
        android:textSize="15sp"
        android:layout_marginLeft="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_vehicle_id"
        android:text="VehicleID"
        android:layout_marginTop="5sp"
        android:textSize="15sp"
        android:layout_marginLeft="20sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_3"
        android:orientation="horizontal"
        android:layout_marginLeft="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_date_booking"
            android:textSize="15sp"
            android:text="DateofBooking  :  " />
        <EditText
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/home_booking_date"
            android:layout_marginLeft="20sp"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_4"
        android:orientation="horizontal"
        android:layout_marginLeft="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_from_date"
            android:textSize="15sp"
            android:text="FromDate  :  " />
        <EditText
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/home_fromb_date"
            android:layout_marginLeft="20sp"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_5"
        android:orientation="horizontal"
        android:layout_marginLeft="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_packageprice"
            android:textSize="15sp"
            android:text="FromDate  :  " />
        <EditText
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/home_package_price"
            android:layout_marginLeft="20sp"
            android:textSize="15sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_hotel_id"
        android:text="HotelID"
        android:layout_marginTop="5sp"
        android:textSize="15sp"
        android:layout_marginLeft="20sp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_but_delete"
        android:text="Delete"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="150sp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_but_update"
        android:text="update"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="150sp"/>
</LinearLayout>