<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/package_id"
        android:text="PackageID"
        android:layout_marginTop="30sp"
        android:textSize="20sp"
        android:layout_marginLeft="120sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/agency_id"
        android:text="AgencyID"
        android:layout_marginTop="30sp"
        android:textSize="20sp"
        android:layout_marginLeft="120sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/city_id"
        android:text="CityID"
        android:layout_marginTop="30sp"
        android:textSize="20sp"
        android:layout_marginLeft="120sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/PackageType"
            android:textSize="15sp"
            android:layout_marginLeft="20sp"
            android:text="PackageType  :  " />
        <EditText
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/package_type"
            android:layout_marginLeft="20sp"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/PackageDays"
            android:textSize="15sp"
            android:layout_marginLeft="20sp"
            android:text="PackageDays  :  " />
        <EditText
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/package_days"
            android:layout_marginLeft="20sp"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/PackageNghts"
            android:textSize="15sp"
            android:layout_marginLeft="20sp"
            android:text="PackageNights  :  " />
        <EditText
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/package_nights"
            android:layout_marginLeft="20sp"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout4"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/PackagePrice"
            android:textSize="15sp"
            android:layout_marginLeft="20sp"
            android:text="PackagePrice  :  " />
        <EditText
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/package_price"
            android:layout_marginLeft="20sp"
            android:textSize="15sp"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_delete"
        android:text="Delete"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="150sp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_update"
        android:text="Update"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="150sp"/>
</LinearLayout>