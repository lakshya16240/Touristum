<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Spinner
        android:id="@+id/sp_filter1"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="120dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_filter1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="95dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="95dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Name" />

        <ImageButton
            android:id="@+id/bv_filter1"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_alignTop="@id/et_filter1"
            android:layout_alignEnd="@id/et_filter1"
            android:src="@drawable/enter_arrow"
            android:background="@android:color/white"
            android:layout_alignBottom="@id/et_filter1"/>
    </RelativeLayout>
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/cg_filters1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginStart="24dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>