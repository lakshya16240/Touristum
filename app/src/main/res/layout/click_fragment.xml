<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp" android:layout_height="200dp"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/fragment_img"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/ic_panorama_black_24dp">
        </ImageView>
        <TextView
            android:id="@+id/package_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Package_Info"
            android:textSize="20sp"></TextView>
        <Button
            android:id="@+id/fragment_edit"
            android:layout_width="match_parent"
            android:paddingLeft="80sp"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:drawableLeft="@drawable/edit"
            android:text="Edit_Info"
            android:textSize="15sp"></Button>
        <Button
            android:id="@+id/fragment_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="80sp"
            android:textAlignment="textStart"
            android:drawableLeft="@drawable/close"
            android:text="Delete"
            android:textSize="15sp"></Button>


    </LinearLayout>

</RelativeLayout>